<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ubiquitous.computing.behaviorcollection.ui.BehaviorCollectionActivity$PlaceholderFragment">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnActivity"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/countdown"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_startActivity"
        android:id="@+id/activity_button"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/chronometer"
        android:onClick="clickStartActivity"
        />
</RelativeLayout>
